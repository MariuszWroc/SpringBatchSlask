<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch" 
	xmlns:task="http://www.springframework.org/schema/task"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/batch
	http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
 
  <bean id="stadium" class="pl.mariuszczarny.springbatchforslask.model.Stadium" />
 
  <batch:job id="stadiumImportJob">
	<batch:step id="step1">
	  <batch:tasklet>
		<batch:chunk reader="mysqlstadiumReader" writer="cvsstadiumWriter" processor="itemProcessor"
			commit-interval="2">
		</batch:chunk>
	  </batch:tasklet>
	</batch:step>
  </batch:job>
  
  <!-- Optional ItemProcessor to perform business logic/filtering on the input records -->
  <bean id="itemProcessor" class="pl.mariuszczarny.springbatchforslask.batch.StadiumItemProcessor" />
        
  <bean id="cvsstadiumWriter" class="org.springframework.batch.item.file.FlatFileItemWriter" scope="step"> 
 
      <!-- Read a csv file -->
      <!--<property name="resource" value="classpath:csv/test.txt" />-->
      <property name="resource" value="file:src/main/resources/csv/stadiumResult.csv" />
 
      <property name="lineAggregator">

          <!-- An Aggregator which converts an object into delimited list of strings -->
          <bean class="org.springframework.batch.item.file.transform.DelimitedLineAggregator">

              <property name="delimiter" value="|" />

              <property name="fieldExtractor">

                  <!-- Extractor which returns the value of beans property through reflection -->
                  <bean
                      class="org.springframework.batch.item.file.transform.BeanWrapperFieldExtractor">
                      <property name="names" value="id, stadiumName, sitsNumber, yearBuild, modernity, fieldWidth, fieldHeight, cityidCity"/>
                  </bean>
              </property>
          </bean>
      </property>
 
  </bean>
  
  <bean id="mysqlstadiumReader"
        class="org.springframework.batch.item.database.JdbcCursorItemReader">
      <property name="dataSource" ref="dataSource" />
      <property name="sql" value="SELECT * FROM stadium" />
      <!-- It will take care matching between object property and sql name parameter -->
      <property name="rowMapper">
          <bean class="org.springframework.jdbc.core.BeanPropertyRowMapper"> 
              <constructor-arg value="pl.mariuszczarny.springbatchforslask.model.Stadium"/> 
          </bean>
      </property>
  </bean>
 
</beans>